<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.fishywiki.testapp"
        version     = "1.0.0"
        versionCode = "10" >

   <!-- Where to start -->
   <content src="index.html" />

   <!-- Where is it allowed to access -->
   <access origin="*" />

   <!-- Make sure you're using the appropriate version of PhoneGap -->
   <preference name="phonegap-version" value="3.3.0" />

   <!-- Splash screen -->
   <preference name="SplashScreen" value="splash" />

   <!-- See http://docs.build.phonegap.com/en_US/3.3.0/ for the docs -->
   <name>Brendan\'s sample Config.xml</name>

   <!-- The name of your app -->
   <name>My Test App</name>

   <!-- A description of the app -->
   <description>
        An example config.xml for online PhoneGap builds.
   </description>

   <!-- Author's details -->
   <author href="http://fishywiki.org" email="someone@somecompany.com">
        Author Name
   </author>

   <!-- Icons -->
   <icon src="icon.png" /> <!-- Default icon must be called icon.png -->
   <!-- All the various platform icons
      <icon src="icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
      <icon src="icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
      <icon src="icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
      <icon src="icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
      <icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
      <icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
      <icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
      <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
   -->
        

   <!-- Plugins
        Supported names (see https://build.phonegap.com/plugins), e.g.
           com.phonegap.plugins.barcodescanner - Barcode scanner
           org.apache.cordova.camera - Camera
           org.apache.cordova.geolocation - Geolocation
           org.apache.cordova.device - Device
   -->
   <!-- We'll use the camera as an example -->
   <gap:plugin name="org.apache.cordova.camera" />
   <gap:plugin name="nl.x-services.plugins.socialsharing" />

   <!-- Device access for Android -->
   <feature name="Device">
      <param name="android-package" value="org.apache.cordova.device.Device" />
   </feature>
   
   <!-- Socialsharing for Android -->
   <feature name="SocialSharing">
      <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
   </feature>
   

</widget>

